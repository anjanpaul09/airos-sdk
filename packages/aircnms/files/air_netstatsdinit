#!/bin/sh /etc/rc.common

START=97
USE_PROCD=1
PROG=/usr/sbin/air-netstatsd

start_service()
{

    procd_open_instance
    procd_set_param command "$PROG"
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param respawn 3600 0 0
    procd_close_instance
}

stop_service()
{
    procd_kill_user "$PROG"
}

restart_service()
{
    stop_service
    sleep 1
    start_service
}


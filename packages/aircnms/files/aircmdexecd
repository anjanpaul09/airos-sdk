#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1
PROG=/usr/sbin/air-cmdexecd

start_service()
{

    procd_open_instance
    procd_set_param command "$PROG"
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param respawn 3600 0 0
    procd_close_instance
}

# stop_service() is not needed - procd handles stopping automatically

restart_service()
{
    stop
    sleep 1
    start
}


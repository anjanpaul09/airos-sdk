#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1

start_service() {
    procd_open_instance logrotate
    procd_set_param command /usr/sbin/logrotate /etc/logrotate.conf
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_set_param timer 5 5   # start after 5s, repeat every 5s
    procd_close_instance
}

stop_service() {
    procd_kill logrotate
}


#!/bin/sh /etc/rc.common

START=97
USE_PROCD=1
PROG=/usr/sbin/aircnms_logger.sh

start_service() {
    procd_open_instance
    procd_set_param command "$PROG"
    procd_set_param respawn 5 10 0    # restart if killed (5s delay, 10s max retry, no limit)
    procd_set_param stdout 1          # redirect stdout to logd
    procd_set_param stderr 1          # redirect stderr to logd
    procd_close_instance
}

stop_service() {
    procd_kill "$PROG"
}



#!/bin/sh /etc/rc.common

START=97
USE_PROCD=1
PROG=/usr/sbin/aircnms_logger.sh

start_service() {
    procd_open_instance
    procd_set_param command "$PROG"
    procd_set_param stdout 1       # send output to logd
    procd_set_param stderr 1
    procd_set_param respawn        # restart if it crashes
    procd_close_instance
}

stop_service() {
    procd_kill "$PROG"
}


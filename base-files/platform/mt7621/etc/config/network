
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option packet_steering '1'
	option ula_prefix 'fda6:5110:5b88::/48'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'wan'

config interface 'lan'
	option device 'br-lan'
	option proto 'dhcp'
        option ipv6 '0'

config interface 'wan'
	option device 'wan'
	option proto 'dhcp'

config interface 'wan6'
	option device 'wan'
	option proto 'dhcpv6'

config device 'nat_dev'
	option name 'br-nat'
	option type 'bridge'
	option bridge_empty '1'

config interface 'nat_network'
	option device 'br-nat'
	option proto 'static'
	option ipaddr '192.168.23.1'
	option netmask '255.255.255.0'

config device
	option name 'br-mgmt'
	option type 'bridge'
	list ports 'lan'

config interface 'mgmt'
	option proto 'static'
	option ipaddr '192.168.100.10'
	option netmask '255.255.255.0'
	option device 'br-mgmt'
